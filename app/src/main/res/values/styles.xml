<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="QuizLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/mid_margin</item>
        <item name="android:paddingTop">@dimen/quizLayout_padding</item>
        <item name="android:paddingBottom">@dimen/quizLayout_padding</item>
        <item name="android:background">@drawable/rounded_shape</item>
    </style>

    <style name="QuizIcon">
        <item name="android:layout_width">@dimen/quizIcon_size</item>
        <item name="android:layout_height">@dimen/quizIcon_size</item>
        <item name="android:layout_marginTop">@dimen/small_margin</item>
        <item name="android:layout_marginLeft">@dimen/large_margin</item>
        <item name="android:background">@drawable/quiz_circle</item>
        <item name="android:textSize">@dimen/question_text_size</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="QuizQuestion">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/question_minHeight</item>
        <item name="android:layout_marginLeft">@dimen/large_margin</item>
        <item name="android:textSize">@dimen/question_text_size</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="QuizSeparator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/separator_height</item>
        <item name="android:layout_marginTop">@dimen/mid_margin</item>
        <item name="android:layout_marginBottom">@dimen/mid_margin</item>
        <item name="android:background">@color/colorBackground</item>
    </style>

    <style name="QuizRadioGroup">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/mid_margin</item>
    </style>

    <style name="QuizRadioButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/answer_text_size</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="QuizHint">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/large_margin</item>
        <item name="android:textSize">@dimen/answer_text_size</item>
        <item name="android:textColor">@color/colorWrong</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="WelcomeTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/mid_margin</item>
        <item name="android:layout_marginBottom">@dimen/mid_margin</item>
    </style>

    <style name="AnswerEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/large_margin</item>
        <item name="android:textSize">@dimen/answer_text_size</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textStyle">bold</item>
        <item name="android:inputType">textCapWords</item>
    </style>

    <style name="Buttons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/large_margin</item>
        <item name="android:layout_marginBottom">@dimen/large_margin</item>
        <item name="android:layout_marginLeft">@dimen/small_margin</item>
        <item name="android:layout_marginRight">@dimen/small_margin</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

</resources>
